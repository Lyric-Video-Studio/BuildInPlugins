<UserControl
    x:Class="CroppedImagePlugin.ImageCropViewItem"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CroppedImagePlugin"
    x:DataType="local:ItemPayload">
  <StackPanel Orientation="Horizontal">
    <TextBox Text="{Binding Source}" />
    <Button
        x:Name="pickBtn"
        Click="PickFile"
        Content="Pick from files" />
  </StackPanel>
</UserControl>