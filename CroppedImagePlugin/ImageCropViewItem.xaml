<ContentView
    x:Class="CroppedImagePlugin.ImageCropViewItem"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CroppedImagePlugin"
    x:DataType="local:ItemPayload">
    <HorizontalStackLayout>
        <Editor Text="{Binding Source}" />
        <Button
            x:Name="pickBtn"
            Clicked="PickFile"
            Text="Pick from files" />
    </HorizontalStackLayout>
</ContentView>